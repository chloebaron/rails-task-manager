<h1>TASKS SO MANY AH</h1>
<h3><%= @task.title%> </h3>
<p><%= @task.details %> </p>
<%  if @task.completed == true %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck<% @task.id %>">
        <label class="form-check-label" for="default<% @task.id %>">
          <p><%=  "Task Status: Not done" %></p>
        </label>
      </div>
<%  else %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck<% @task.id %>">
        <label class="form-check-label" for="default<% @task.id %>">
          <p><%=  "Task Status: Done" %></p>
        </label>
      </div>
<%  end %>

<%= link_to tasks_path do %>
  <i class="fa fa-home"></i>
<% end %>

<%= link_to edit_task_path do %>
  <i class="fa fa-pencil"></i>
<% end %>

